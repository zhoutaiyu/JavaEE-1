		<slf4j-nop.version>1.7.21</slf4j-nop.version>
		<!-- c3p0 -->
		<hibernate-c3p0.version>5.2.2.Final</hibernate-c3p0.version>
		<!-- MySQL -->
		<mysql.version>6.0.3</mysql.version>
		<!-- 二级缓存 -->
		<hibernate-ehcache>5.2.2.Final</hibernate-ehcache>
